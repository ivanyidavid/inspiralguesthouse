{
  "version": 2,
  "buildCommand": "npx vite build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/availability", "destination": "/api/availability" },
    { "source": "/api/cleaning-fee", "destination": "/api/cleaning-fee" },
    { "source": "/api/extra-guest-fee", "destination": "/api/extra-guest-fee" },
    { "source": "/api/bookings", "destination": "/api/bookings" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
